@page "/Login"
@model StockIT.Pages.UserLoginModel
@{
    ViewData["Title"] = "Login";
}

<form action="post" asp-page-handler="Login">
    <div class="form-group">
        <label for="username">Username</label>
        <input type="text" class="form-control" asp-for="@Model.UserModel.Username" id="username" aria-describedby="username" placeholder="Enter username">
        <small id="usernameSmall" class="form-text text-muted">Enter Given Username</small>
    </div>
    <div class="form-group">
        <label for="password">Password</label>
        <input type="password" asp-for="@Model.UserModel.Password" class="form-control" id="password" placeholder="Password">
    </div>
  
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

