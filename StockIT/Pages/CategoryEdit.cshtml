@page "/CategoryEdit"
@model StockIT.Pages.CategoryEditModel
@{
}
<h1>Category Edit</h1>

<form asp-page-handler="EditCategory" method="post">
    <label for="categoryName">Category Name:</label>
    <input type="text" id="categoryName" name="CategoryName" value="@Model.Category.Name" asp-for="Category" data-val="true" data-val-required="Category name is required" required />
    <br />
    <button type="submit">Add Category</button>
</form>
